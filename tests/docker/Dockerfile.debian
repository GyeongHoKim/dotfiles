FROM debian:bookworm

# Prevent interactive prompts
ENV DEBIAN_FRONTEND=noninteractive

# Install basic dependencies
RUN apt-get update && apt-get install -y \
    curl \
    git \
    sudo \
    && rm -rf /var/lib/apt/lists/*

# Create test user with sudo access
RUN useradd -m -s /bin/bash testuser && \
    echo "testuser ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers

# Switch to test user
USER testuser
WORKDIR /home/testuser

# Set environment variables
ENV HOME=/home/testuser
ENV USER=testuser

# Copy project files
COPY --chown=testuser:testuser . /home/testuser/dotfiles

# Copy debug collection script
COPY --chown=testuser:testuser tests/collect_debug.sh /home/testuser/collect_debug.sh
RUN chmod +x /home/testuser/collect_debug.sh

# Default command: install chezmoi and apply dotfiles from local source, then verify
CMD ["/bin/bash", "-c", "\
    EXIT_CODE=0; \
    sh -c \"$(curl -fsLS get.chezmoi.io)\" -- init --apply --source /home/testuser/dotfiles || EXIT_CODE=$?; \
    /home/testuser/dotfiles/tests/verify_install.sh || EXIT_CODE=$?; \
    /home/testuser/collect_debug.sh; \
    exit $EXIT_CODE \
"]
